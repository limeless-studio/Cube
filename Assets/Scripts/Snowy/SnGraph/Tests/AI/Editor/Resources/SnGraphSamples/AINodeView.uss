#topInputContainer {
    padding: 0;
    margin: 0;
    width: 100%;
}
.aiNodeView #title {
    padding-left: 18px;
    padding-right: 24px;
}

.aiNodeView #topInputContainer, .aiNodeView #output {
    padding: 0;
}

.aiNodeView #topInputContainer .port, .aiNodeView #output .port {
    width: 100%;
    padding: 0;
    margin: 0;
}

.execInPortView, .execOutPortView {
    width: 100%;
    justify-content: center;
}

.aiNodeView .execInPortView #connector, .aiNodeView .execOutPortView #connector {
    width: 100%;
    height: 100%;
    margin: 0;
    border-radius: 0;
    border-width: 0;
}

.aiNodeView .execInPortView #connector #cap, .aiNodeView .execOutPortView #connector #cap {
    width: 100%;
    height: 100%;
    border-radius: 0;
}

.aiNodeView .execInPortView #connector:hover {
    background-color: #f0f0f0;
}

.aiNodeView .execInPortView #type, .aiNodeView .execOutPortView #type {
    visibility: hidden;
    width: 0;
    margin: 0;
}